extends ../../layouts/auth.pug
include ../../mixins/alert.pug
block main
  +alert-error(5000)
  section.vh-100.bg-image(style='background-color: rgb(0, 28, 64);')
    .mask.d-flex.align-items-center.h-100.gradient-custom-3
      .container.h-100
        .row.d-flex.justify-content-center.align-items-center.h-100
          .col-12.col-md-9.col-lg-7.col-xl-6
            .card(style='border-radius: 15px;')
              .card-body.p-5
                form(
                  account-signup-form 
                  action = `/${prefixAdmin}/auth/signup`
                  method ="POST"
                )
                  .form-outline.mb-4(data-mdb-input-init='')
                    input#form3Example1cg.form-control.form-control-lg(type='text' name="fullName")
                    label.form-label(for='form3Example1cg') Your Name
                  .form-outline.mb-4(data-mdb-input-init='')
                    input#form3Example3cg.form-control.form-control-lg(type='email' name="email")
                    label.form-label(for='form3Example3cg') Your Email
                  .form-outline.mb-4(data-mdb-input-init='')
                    input#form3Example4cg.form-control.form-control-lg(type='password' name="password")
                    label.form-label(for='form3Example4cg') Password
                  .form-outline.mb-4(data-mdb-input-init='')
                    input#form3Example4cdg.form-control.form-control-lg(type='password' name="confirmPassword")
                    label.form-label(for='form3Example4cdg') Repeat your password
                  .form-outline.mb-4(data-mdb-input-init='')
                    input#form3Example4cdg.form-control.form-control-lg(type='number' name="phone")
                    label.form-label(for='form3Example4cdg') Phone number
                  .form-check.d-flex.justify-content-center.mb-5
                    input#form2Example3cg.form-check-input.me-2(type='checkbox', value='')
                    label.form-check-label(for='form2Example3g')
                      | I agree all statements in 
                      a.text-body(href='#!')
                        u Terms of service
                  .d-flex.justify-content-center
                    button.btn.btn-success.btn-block.btn-lg.gradient-custom-4.text-body(type='submit', data-mdb-button-init='', data-mdb-ripple-init='') Register
                  p.text-center.text-muted.mt-5.mb-0
                    a.fw-bold.text-body(href=`/${prefixAdmin}/auth/login`)
                      | Have already an account?   