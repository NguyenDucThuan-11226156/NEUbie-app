.container
  .top-bar
    // More
    button.top-bar__more.d-none.d-lg-block.js-toggle(toggle-target='#navbar')
      img.icon.top-bar__more-icon(src='/icons/more.svg' alt='')
    // Logo
    a.logo.top-bar__logo(href='/')
      img.logo__img.top-bar__logo-img(src='/images/Mascot 01.png' alt='NEUbie')
      h1.logo__title.top-bar__logo-title NEUbie
    // Actions
    if !user
      .top-act
        a.btn.btn--text.d-md-none(href='/login') Sign In
        a.top-act__sign-up.btn.btn--primary(href='./sign-up.html') Sign Up
    else 
      .top-act
        .top-act__group.d-md-none.top-act__group--single
          button.top-act__btn
            img.icon.top-act__icon(src='/icons/search.svg', alt='')
        .top-act__group.d-md-none
          .top-act__btn-wrap
            button.top-act__btn
              img.icon.top-act__icon(src='/icons/heart.svg', alt='')
              span(class="top-act__title" mini-cart) 
            // Dropdown
            .act-dropdown
              .act-dropdown__inner
                img.act-dropdown__arrow(src='/icons/arrow-up.png', alt='')
                .act-dropdown__top
                  h2.act-dropdown__title 
                  a.act-dropdown__view-all(href='./favourite.html') See All
                .row.row-cols-3.gx-2.act-dropdown__list
                 
                .act-dropdown__separate
                .act-dropdown__checkout
                  a.btn.btn--primary.btn--rounded.act-dropdown__checkout-btn(href='/checkout')
                    | Check Out All
          .top-act__separate
          .top-act__btn-wrap
            button.top-act__btn
              img.icon.top-act__icon(src='/icons/buy.svg', alt='')
              span.top-act__title.total_money 
            // Dropdown
            .act-dropdown
              .act-dropdown__inner
                img.act-dropdown__arrow(src='/icons/arrow-up.png', alt='')
                .act-dropdown__top
                  h2.act-dropdown__title 
                  a.act-dropdown__view-all(href='./checkout.html') See All
                .row.row-cols-3.gx-2.act-dropdown__list
                .act-dropdown__bottom
                  .act-dropdown__row
                    span.act-dropdown__label Subtotal
                    span.act-dropdown__value.subTotal 
                  .act-dropdown__row
                    span.act-dropdown__label Discount
                    span.act-dropdown__value 0
                  .act-dropdown__row
                    span.act-dropdown__label Shipping
                    span.act-dropdown__value Free
                  .act-dropdown__row.act-dropdown__row--bold
                    span.act-dropdown__label Total Price
                    span.act-dropdown__value.totalPrice
                .act-dropdown__checkout
                  a.btn.btn--primary.btn--rounded.act-dropdown__checkout-btn(href='/checkout')
                    | Check Out All
        .top-act__user
          img.top-act__avatar(src='/images/Mascot 01.png', alt='')
          // Dropdown
          .act-dropdown.top-act__dropdown
            .act-dropdown__inner.user-menu
              img.act-dropdown__arrow.top-act__dropdown-arrow(src='/icons/arrow-up.png', alt='')
              .user-menu__top
                img.user-menu__avatar(src='https://scontent.fhan14-5.fna.fbcdn.net/v/t39.30808-6/365429789_303830972168088_2721226088836158075_n.jpg?_nc_cat=109&ccb=1-7&_nc_sid=5f2048&_nc_ohc=qh6iIbp_0KwAb7oPgs0&_nc_ht=scontent.fhan14-5.fna&oh=00_AfAsq3huZUB3gol71OlWsAbmnomPAnmoGYjrshQbhFesWw&oe=66226760', alt='')
                div
                  p.user-menu__name #{user.fullName}
                  p @thuan
              ul.user-menu__list
                li
                  a.user-menu__link(href='./profile.html') Profile
                li
                  a.user-menu__link(href='./favourite.html') Favourite list
                li.user-menu__separate
                  a#switch-theme-btn.user-menu__link(href='#!')
                    span Dark mode
                    img.icon.user-menu__icon(src='/icons/sun.svg', alt='')
                li
                  a.user-menu__link(href='#!') Settings
                li.user-menu__separate
                  a.user-menu__link(href='/logout' logOutButton) Logout

