extends ../../layouts/auth.pug
block main
  .auth
    // Auth intro
    .auth__intro.d-md-none
      p.auth__intro-text
        | The best of luxury brand values, high quality products, and innovative
        | services
    // Auth content
    .auth__content
      .auth__content-inner
        a.logo(href='./')
          img.logo__img(src='/images/6.png', alt='grocerymart Logo')
          h2.logo__title NEUbie
        h1.auth__heading Hello Again!
        p.auth__desc
          | Welcome back to sign in. As a returning customer, you have access to
          | your previously saved all information.
        form.form.auth__form(action='')
          .form__group
            .form__text-input
              input.form__input(type='email', name='email', id='email', placeholder='Email', autofocus='', required='')
            p.form__error Email is not in correct format
          .form__group
            .form__text-input
              input.form__input(type='password', name='password', id='password', placeholder='Password', required='', minlength='6')
            p.form__error Password must be at least 6 characters
          .form__group.form__group--inline
            label.form__checkbox(for='default-card')
              input.form__checkbox-input.d-none(type='checkbox', name='default-card', id='default-card')
              span.form__checkbox-label Set as default card
            a.auth__link.form__pull-right(href='./reset-password.html') Forgot password?
          .form__group.auth__btn-group
            button.btn.btn--primary.auth__btn.form__submit-btn Sign In
            a(href="/auth/google") 
              button.btn.btn--outline.auth__btn.btn--no-margin(type="button")
                | Sign in with Google
        p.auth__text
          | Don&rsquo;t have an account yet?
          a.auth__link.auth__text-link(href='./sign-up.html') Sign Up
